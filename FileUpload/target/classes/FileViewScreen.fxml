<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="560.0" prefWidth="1190.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.controllers.FileViewScreenController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TableView fx:id="jobTable" onDragDropped="#dropped" onDragOver="#dragOver" BorderPane.alignment="CENTER">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </TableView>
         </center>
         <top>
            <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" fillHeight="false" styleClass="top-bar">
                     <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-label" text="Job Number:">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </Text>
                        <TextField fx:id="jobSearchField" promptText="Enter a number from 0 to 2,147,483,647" styleClass="text-box" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#searchJob" prefHeight="27.0" prefWidth="84.0" styleClass="basic-button" text="Go" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                     </VBox.margin>
                  </HBox>
                  <TilePane hgap="10.0" tileAlignment="CENTER_LEFT" vgap="10.0">
                     <children>
                        <HBox alignment="CENTER_RIGHT" fillHeight="false" prefWidth="300.0" spacing="5.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="title" />
                              <TextField fx:id="title" editable="false" prefWidth="200.0" styleClass="text-box" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" fillHeight="false" prefWidth="300.0" spacing="5.0">
                           <children>
                              <Text fx:id="jobNo" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="jobNo" />
                              <TextField editable="false" prefWidth="200.0" styleClass="text-box" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" fillHeight="false" prefWidth="300.0" spacing="5.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="bookType" />
                              <TextField fx:id="bookType" editable="false" prefWidth="200.0" styleClass="text-box" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" fillHeight="false" prefWidth="300.0" spacing="5.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="customer" />
                              <TextField fx:id="customer" editable="false" prefWidth="200.0" styleClass="text-box" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" fillHeight="false" prefWidth="300.0" spacing="5.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="coverFinish" />
                              <TextField fx:id="coverFinish" editable="false" prefWidth="200.0" styleClass="text-box" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" fillHeight="false" prefWidth="300.0" spacing="5.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="extent" />
                              <TextField fx:id="extent" editable="false" prefWidth="200.0" styleClass="text-box" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" fillHeight="false" prefWidth="300.0" spacing="5.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="headMargin" />
                              <TextField fx:id="headMargin" editable="false" prefWidth="200.0" styleClass="text-box" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" fillHeight="false" prefWidth="300.0" spacing="5.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="backMargin" />
                              <TextField fx:id="backMargin" editable="false" prefWidth="200.0" styleClass="text-box" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" fillHeight="false" prefWidth="300.0" spacing="5.0">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="spineBulk" />
                              <TextField fx:id="spineBulk" editable="false" prefWidth="200.0" styleClass="text-box" />
                           </children>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </TilePane>
               </children>
            </VBox>
         </top>
         <bottom>
            <VBox alignment="TOP_CENTER" prefWidth="1190.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="BOTTOM_CENTER" fillHeight="false" spacing="5.0" styleClass="top-bar" VBox.vgrow="NEVER">
                     <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-label" text="Progress: ">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Text>
                        <ProgressBar fx:id="progressBar" prefHeight="15.0" prefWidth="1500.0" progress="1.0" HBox.hgrow="ALWAYS" />
                        <Text fx:id="progressPercentageText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-label" text="---%" />
                        <Text fx:id="statusText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-label" text="Table Empty">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Text>
                     </children>
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
